<form ng-show="editing.current[1]">
	<textarea class="form-control" rows="{{post.title.length/80}}" ng-model="title" ng-keyup="logTitle()"></textarea>
	<!-- <input class="form-control" type="text" ng-model="title" placeholder="Title" ng-keyup="logTitle()"> -->
	<br>
	<div class="input-group">
		<input class="form-control" type="text" placeholder="Link" ng-model="link">
		<span class="input-group-btn">
			<button class="btn btn-primary" ng-click="save()">Save</button>
			<button class="btn btn-default" ng-click="reset()">Cancel</button>
		</span>
	</div>
	<br>
</form>